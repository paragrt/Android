<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="48dp"
	android:padding="3dp" android:background="#800000">

	<TextView android:layout_width="wrap_content" android:id="@+id/myapplabel"
		android:layout_height="wrap_content" android:layout_centerVertical="true"
		android:text="@string/app_name" android:textColor="#ff00ff" android:textSize="12pt"
		android:layout_marginLeft="4dp" />
	<TextView android:layout_width="wrap_content" android:id="@+id/uname" android:layout_toRightOf="@id/myapplabel"
			  android:layout_height="wrap_content" android:layout_centerVertical="true" android:textSize="7pt" android:background="@drawable/roundedcorner"
			  android:text="@string/app_name" android:textColor="#ffffff"
			  android:layout_marginLeft="4dp" />
	<Button android:id="@+id/logout_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true"
			android:layout_centerVertical="true" android:onClick="onLogoutClick"
			android:text="@string/logout_button" />

	<Button android:id="@+id/angapp_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_toLeftOf="@id/logout_button"
			android:layout_centerVertical="true" android:onClick="onANGAppClick"
			android:text="@string/angapp_button" />

</RelativeLayout>
